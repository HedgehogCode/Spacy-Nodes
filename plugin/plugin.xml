<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
	<!-- Activator -->
	<extension point="org.eclipse.ui.startup">
		<startup class="se.redfield.textprocessing.SpacyPlugin"/>
	</extension>
	
   <extension
         point="org.knime.workbench.repository.nodes">   
      <node
            category-path="/redfield-textprocessing"
            factory-class="se.redfield.textprocessing.nodes.tokenizer.SpacyTokenizerNodeFactory">
      </node>
      <node
            category-path="/redfield-textprocessing"
            factory-class="se.redfield.textprocessing.nodes.ner.SpacyNerTaggerNodeFactory">
      </node>
      <node
            category-path="/redfield-textprocessing"
            factory-class="se.redfield.textprocessing.nodes.lemmatizer.SpacyLemmatizerNodeFactory">
      </node>
      <node
            category-path="/redfield-textprocessing"
            factory-class="se.redfield.textprocessing.nodes.pos.SpacyPosTaggerNodeFactory">
      </node>
      <node
            category-path="/redfield-textprocessing"
            factory-class="se.redfield.textprocessing.nodes.morph.SpacyMorphologizerNodeFactory">
      </node>
      <node
            category-path="/redfield-textprocessing"
            factory-class="se.redfield.textprocessing.nodes.vectorizer.SpacyVectorizerNodeFactory">
      </node>
      <node
            category-path="/redfield-textprocessing"
            factory-class="se.redfield.textprocessing.bert.nodes.classifier.BertClassifierNodeFactory">
      </node>
      <node
            category-path="/redfield-textprocessing"
            factory-class="se.redfield.textprocessing.bert.nodes.embedder.BertEmbedderNodeFactory">
      </node>    
   </extension>
	<extension
		point="org.knime.python.modules">
      <directory
            path="py/">
      </directory>
   </extension>
      <extension
            point="org.knime.workbench.repository.categories">
         <category
               icon="resources/redfield_logo.png"
               level-id="redfield-textprocessing"
               name="Redfield NLP Nodes"
               path="/">
         </category>
      </extension>
      <extension
            point="org.eclipse.core.runtime.preferences">
         <initializer
               class="se.redfield.textprocessing.prefs.SpacyPreferenceInitializer">
         </initializer>
      </extension>
      <extension
            point="org.eclipse.ui.preferencePages">
         <page
               class="se.redfield.textprocessing.prefs.SpacyPreferencePage"
               id="se.redfield.textprocessing.prefs.SpacyPreferencePage"
               name="Redfield NLP Nodes">
         </page>
      </extension>
      <extension
            point="org.knime.ext.textprocessing.TagSet">
         <TagSet
               TagBuilder="se.redfield.textprocessing.data.tag.SpacyNerTagBuilder">
         </TagSet>
         <TagSet
               TagBuilder="se.redfield.textprocessing.data.tag.SpacyMorphTagBuilder">
         </TagSet>
      </extension>
   
</plugin>
